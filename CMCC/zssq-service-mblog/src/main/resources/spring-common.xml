<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<!-- 默认注解支持 -->
    <context:annotation-config />
    <!-- 扫描指定包下的注解Bean -->
    <context:component-scan base-package="com.zssq"/>
    <!-- 代理支持 -->
    <aop:aspectj-autoproxy proxy-target-class="true"/>

	<!-- kafka消费者配置 -->
    <bean id="kafkaConsumerContainer" class="com.zssq.kafka.core.KafkaConsumerContainer">
		<property name="topicMap">
			<map>
				<entry key="mblog_topic_essence" value="mblogEssenceService" />				
				<entry key="mblog_topic_num" value="mblogNumService" />				
				<entry key="mblog_topic_forward" value="mblogForwardService" />				
			</map>
		</property>
	</bean>   
 
</beans>